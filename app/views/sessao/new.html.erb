<h1>Login</h1>

<div>

<% if flash[:alert] %>
<p id="notice"><%= flash[:alert] %></p>
<% end %>

<%= form_tag do %>
<fieldeset>
  <div>
    <%= label_tag :email, 'E-mail' %>
    <%= text_field_tag :email, params[:email] %>
    <%= label_tag :senha, 'Senha' %>
    <%= password_field_tag :senha, params[:senha] %>
  </div>
  <div>
    <%= submit_tag "Login" %>
  </div>
</fieldset>
<% end %>
</div>
